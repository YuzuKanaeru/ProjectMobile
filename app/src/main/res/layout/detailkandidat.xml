<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/biru">

    <TextView
        android:id="@+id/detailkandidat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="Detail Kandidat"
        android:textColor="@color/white"
        android:textSize="22dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="15dp"
        android:minHeight="16dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">

        <TextView
            android:id="@+id/detail_kandidat_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="210dp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppinssemibold"
            android:text="Visi"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/visikandidat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="240dp"
            android:fontFamily="@font/poppinsregular"
            android:textColor="@color/black"
            android:text="Isi Visi"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="350dp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppinssemibold"
            android:text="Misi"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/misikandidat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="380dp"
            android:fontFamily="@font/poppinsregular"
            android:textColor="@color/black"
            android:text="Isi Misi."
            android:textSize="18dp" />


        <TextView
            android:id="@+id/detail_kandidat_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="128dp"
            android:layout_marginTop="170dp"
            android:fontFamily="@font/poppinssemibold"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/detail_kandidat_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="15dp"
            android:scaleType="centerInside"
            android:src="@drawable/kobo" />

        <Button
            android:id="@+id/btnvote"
            android:layout_width="188dp"
            android:layout_height="41dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="600dp"
            android:background="@drawable/custom_button"
            android:fontFamily="@font/poppinssemibold"
            android:text="VOTE"
            android:textColor="@color/white"
            android:textSize="15dp"
            tools:ignore="Warning"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>